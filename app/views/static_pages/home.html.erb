<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="overtimeinfo_form">
        <%= render 'shared/overtimeinfo_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>残業データ</h3>
      <%= render 'shared/feed' %>
